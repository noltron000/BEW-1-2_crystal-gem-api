<h2>Edit {{fusion.name}}</h2>

{{!-- Create Fusion Form --}}
<form action='/fusion/{{fusion._id}}?_method=PUT' method='post'>

	<fieldset>
		<legend>
			Basics
		</legend>

		<div>
			<label for='name'>
				Fusion Gem
			</label><br />
			<input type='text' name='name' id='name' value='{{fusion.name}}' />
		</div>

		{{#each gems}}
		<div>
			<input type='checkbox' name='{{this._id}}' id='{{this._id}}' />
			<label for='{{this._id}}'>
				{{this.name}}
			</label>
		</div>
		{{/each}}
	</fieldset>

	<fieldset>
		<legend>
			Abilities
		</legend>

		<div>
			<label for='weapon'>
				Signature Weapon
			</label><br />
			<input type='text' name='weapon' id='weapon' value='{{fusion.weapon}}' />
		</div>

		<div>
			<label for='power'>
				Secret Power
			</label><br />
			<input type='text' name='power' id='power' value='{{fusion.power}}' />
		</div>

	</fieldset>
	<button type='submit'>
		Submit
	</button>

</form>